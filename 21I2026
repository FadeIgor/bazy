HURTOWNIA

1. srednie zarobki dla danych stanowisk
    SELECT pracownicy.stanowisko, AVG(pracownicy.zarobki) AS srednia FROM pracownicy
    GROUP BY pracownicy.stanowisko  
    ORDER BY srednia ASC;
2. stanowiska gdzie pracuje wiecej niz 1 osoba
    SELECT pracownicy.stanowisko, COUNT(*) AS ilosc FROM pracownicy
    GROUP BY pracownicy.stanowisko
    HAVING ilosc > 1;
    
    SELECT klienci.miasto, COUNT(*) AS ilosc
    FROM klienci
    GROUP BY klienci.miasto
    HAVING ilosc > 2;

3. kategorie produktow gdzie cena <100
    SELECT produkty.kategoria, AVG(produkty.cena) as srednia 
    FROM produkty
    GROUP BY kategoria
    HAVING srednia > 100;

4. suma >1000
    SELECT produkty.kategoria, SUM(produkty.cena) as suma 
    FROM produkty
    GROUP BY kategoria
    HAVING suma > 1000;

5. produkty malejaco ze wzg;ledu na cene
    SELECT * FROM produkty
    ORDER BY cena DESC;

6. pracownicy wedlug zarobkow rosnaca
    SELECT * FROM pracownicy
    ORDER BY zarobki ASC;    

7. posortowac maista malejaco
    SELECT klienci.miasto, COUNT(*)
    FROM klienci
    GROUP BY klienci.miasto
    ORDER BY COUNT(*) DESC;

8. srednia cena produktow rosnaca
    SELECT produkty.kategoria, AVG(produkty.cena)
    FROM produkty
    GROUP BY produkty.kategoria
    ORDER BY AVG(produkty.cena) ASC;

9.  stanowiska wedlug sumy zarobkow malejaco
    SELECT pracownicy.stanowisko, SUM(pracownicy.zarobki)
    FROM pracownicy
    GROUP BY stanowisko
    ORDER BY SUM(zarobki) DESC;










